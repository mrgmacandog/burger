<div class="row">
    <div class="col-md-6">
        <h2>Ready to eat</h2>
        {{#each burgers}}
        {{#unless devoured}}
        <p>{{id}}. {{burger_name}}</p>
        <button id="burger-{{id}}" burger="{{id}}" class="btn btn-light burger-button">Devour</button>
        {{/unless}}
        {{/each}}
    </div>

    <div class="col-md-6">
        <h2>Devoured</h2>
        {{#each burgers}}
        {{#if devoured}}
        <p>{{id}}. {{burger_name}}</p>
        {{/if}}
        {{/each}}
    </div>
</div>